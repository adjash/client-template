---
const today = new Date();
---
<footer class="bg-gray-800 text-white py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Upper Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- Business Name or Logo -->
      <div class="mb-6 md:mb-0">
        <a href="/" class="text-2xl font-bold text-white hover:text-indigo-400">
          [Business Name]
        </a>
      </div>
      <!-- Navigation Links -->
      <div class="flex space-x-6">
        <a href="#about" class="text-gray-300 hover:text-white">About Us</a>
        <a href="#services" class="text-gray-300 hover:text-white">Services</a>
        <a href="#testimonials" class="text-gray-300 hover:text-white">Testimonials</a>
        <a href="#contact" class="text-gray-300 hover:text-white">Contact</a>
      </div>
    </div>
    <!-- Divider -->
    <div class="border-t border-gray-700 my-6"></div>
    <!-- Lower Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center text-sm">
      <!-- Address -->
      <div class="text-gray-400">
        <p>[123 Main Street]</p>
        <p>[City], [State] [ZIP Code]</p>
      </div>
      <!-- Social Media Links -->
      <div class="flex space-x-4 mt-4 md:mt-0">
        <a href="[Facebook URL]" aria-label="facebook" class="text-gray-400 hover:text-white">
